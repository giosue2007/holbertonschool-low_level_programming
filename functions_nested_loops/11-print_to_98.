#include <stdio.h>
#include "main.h"

/**
 * print_to_98 - prints all natural numbers from n to 98
 * @n: starting point
 */
void print_to_98(int n)
{
	/* Cas où on doit monter */
	if (n <= 98)
	{
		for (; n < 98; n++)
		{
			printf("%d, ", n);
		}
	}
	/* Cas où on doit descendre */
	else
	{
		for (; n > 98; n--)
		{
			printf("%d, ", n);
		}
	}
	/* Le dernier nombre est toujours 98, sans virgule après */
	printf("98\n");
}